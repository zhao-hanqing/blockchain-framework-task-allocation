<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="1" method="balance_quantity" />
    <experiment length="10000"
      ticks_per_second="10"/>
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

   
    <python_controller id="collab" library="/home/ubuntu/blockchain_robot_task_allocation_framework//argos-python/build/libpy_controller_interface.so">
      <!-- Normal actuator/sensor configuration follows -->
      <actuators>
        <epuck_rgb_leds implementation="default" medium="leds" />
        <epuck_wheels implementation="default" noise_std_dev="0"/>
        <epuck_range_and_bearing implementation="medium" range="7.0"/>
      </actuators>
      <sensors>
        <positioning implementation="default" />
        <epuck_ground implementation="rot_z_only" />
        <epuck_proximity implementation="default" show_rays="false" />
        <epuck_range_and_bearing implementation="medium" medium="rab" show_rays="true"/>
        <differential_steering implementation="default"/>
      </sensors>
      <!-- No required configuration -->
      
      <!-- Optionally, you can pass a script as a controller parameter: -->
      <params script="/home/ubuntu/blockchain_robot_task_allocation_framework//slam2dga/controllers/main_collab.py"
      timeRate="1" />
    </python_controller>

    <python_controller id="greedy" library="/home/ubuntu/blockchain_robot_task_allocation_framework//argos-python/build/libpy_controller_interface.so">
      <!-- Normal actuator/sensor configuration follows -->
      <actuators>
        <epuck_rgb_leds implementation="default" medium="leds" />
        <epuck_wheels implementation="default" />
        <epuck_range_and_bearing implementation="medium" range="7.0"/>
      </actuators>
      <sensors>
        <positioning implementation="default" />
        <epuck_proximity implementation="default" show_rays="false" />
        <epuck_ground implementation="rot_z_only" />
        <epuck_range_and_bearing implementation="medium" medium="rab" show_rays="true"/>
      </sensors>
      <!-- No required configuration -->
      
      <!-- Optionally, you can pass a script as a controller parameter: -->
      <params script=""
      timeRate="1" />
    </python_controller>



  </controllers>
    <loop_functions library="/home/ubuntu/blockchain_robot_task_allocation_framework//argos-python/build/libpy_loop_function_interface.so"
                  label="py_loop_function">
    <params script="/home/ubuntu/blockchain_robot_task_allocation_framework//slam2dga/loop_functions/loop_function.py"/>
  </loop_functions>


  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="4.472, 13.416, 1.5" center="0,0,0">

 <floor id="f" source="loop_functions" pixels_per_meter="50"/>

    <box id="wall_north" size="4.472,0.06,0.1" movable="false">
      <body position="0,6.708,0" orientation="0,0,0" />
    </box>
    <box id="wall_south" size="4.472,0.06,0.1" movable="false">
      <body position="0,-6.708,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="0.06,13.416,0.1" movable="false">
      <body position="2.236,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="0.06,13.416,0.1" movable="false">
      <body position="-2.236,0,0" orientation="0,0,0" />
    </box>

    <distribute>
      <position method="uniform" min="-2.236,2.236,0" max="2.236,6.708,0" />
      <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
      <entity quantity="15" max_trials="15">
        <e-puck id="bc" >
          <controller config="collab" />
        </e-puck>
      </entity> 
    </distribute>

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <range_and_bearing id="rab" index="grid" grid_size="1,1,1" />
    <led id="leds"/>
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>

