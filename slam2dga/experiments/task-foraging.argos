      <user_functions library="/home/ubuntu/blockchain_robot_task_allocation_framework//argos-python/build/libpy_qtuser_function_interface.so"
                      label="py_qtuser_function" >
      <params script="/home/ubuntu/blockchain_robot_task_allocation_framework//slam2dga/loop_functions/qtuser_function.py"/>
      </user_functions>
      
    <camera>
      <placements>
        <placement index="0" position="0,0,8" up="1,0,0" look_at="0,0,0" lens_focal_length="20" />
